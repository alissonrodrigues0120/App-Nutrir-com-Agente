<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2">

    <!-- AppBar / Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#2C2442"
        app:title="@string/app_name"
        app:titleTextColor="@android:color/white"/>

    <!-- Conteúdo rolável -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Card branco com sombra e canto arredondado -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Título da página -->
                        <TextView
                            android:id="@+id/tvTitulo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Número de mamadas ao dia"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_marginBottom="12dp"/>

                        <!-- Texto principal -->
                        <TextView
                            android:id="@+id/tvTextoPrincipal1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/mamadatext"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:lineSpacingExtra="2dp"
                            android:layout_marginBottom="12dp"/>
                        <TextView
                            android:id="@+id/tvTextoPrincipal2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/mamadatext2"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:lineSpacingExtra="2dp"
                            android:layout_marginBottom="12dp"/>

                        <!-- Texto secundário -->
                        <TextView
                            android:id="@+id/tvTextoSecundario1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/mamadatext3"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:lineSpacingExtra="2dp"
                            android:layout_marginBottom="16dp"/>

                        <!-- Card com fundo azul claro -->
                        <LinearLayout
                            android:id="@+id/cardCapacidadeGastrica1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="#E0F7FA"
                            android:padding="16dp"
                            android:layout_marginBottom="20dp"
                            android:elevation="2dp">

                            <TextView
                                android:id="@+id/tvCardTitulo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Veja a seguir a capacidade gástrica da criança no seu primeiro mês de vida"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:layout_marginBottom="10dp"/>

                            <TextView
                                android:id="@+id/tvCardLista1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mamadatext41"
                                android:textSize="15sp"
                                android:textColor="#333333"
                                android:lineSpacingExtra="3dp"/>

                            <TextView
                                android:id="@+id/tvCardLista2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mamadatext42"
                                android:textSize="15sp"
                                android:textColor="#333333"
                                android:lineSpacingExtra="3dp"/>

                            <TextView
                                android:id="@+id/tvCardLista3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mamadatext43"
                                android:textSize="15sp"
                                android:textColor="#333333"
                                android:lineSpacingExtra="3dp"/>

                            <TextView
                                android:id="@+id/tvCardLista4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mamadatext44"
                                android:textSize="15sp"
                                android:textColor="#333333"
                                android:lineSpacingExtra="3dp"/>

                            <!-- Ícone do estômago -->
                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/lottieEstomago"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                app:lottie_rawRes="@raw/ic_estomago"
                                app:lottie_autoPlay="true"
                                app:lottie_loop="true"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
