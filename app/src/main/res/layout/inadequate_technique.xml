<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2">

    <!-- AppBar / Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#2C2442"
        app:title="@string/app_name"
        app:titleTextColor="@android:color/white"/>

    <!-- Conteúdo rolável -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Card branco com sombra e canto arredondado -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Título da página -->
                    <TextView
                        android:id="@+id/tvTitulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Técnica inadequada de amamentação"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:id="@+id/tvTextoPrincipal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ntecnica"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:lineSpacingExtra="2dp"
                        android:layout_marginBottom="12dp"
                        />

                    <TextView
                        android:id="@+id/tvTextoPrincipal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ntecnica2"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:lineSpacingExtra="2dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="left"
                        android:layout_marginStart="18dp"
                        />

                    <ImageView
                        android:id="@+id/feeding_child_image"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:src="@drawable/Mãe_com_dor"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:background="#FFF1D4"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvTextoPrincipal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ntecnica3"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:lineSpacingExtra="2dp"
                            android:layout_marginBottom="12dp"
                            android:gravity="center"
                            />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
