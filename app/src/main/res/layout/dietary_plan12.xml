<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2">

    <!-- AppBar / Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_arrow_back"
        android:background="#2C2442"
        app:title="@string/app_name"
        app:titleTextColor="@android:color/white"/>

    <!-- Conteúdo rolável -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Card branco com sombra e canto arredondado -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <!-- Título -->
                    <TextView
                        android:id="@+id/title_feeding_scheme_12m"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/feeding_scheme_12m"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#222222"
                        android:layout_marginBottom="8dp"/>

                    <!-- Parágrafo introdutório -->
                    <TextView
                        android:id="@+id/intro_feeding_12m"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/feeding_intro_12m"
                        android:textSize="14sp"
                        android:textColor="#444444"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="10dp"/>

                    <!-- Lista / itens (bullets) -->
                    <TextView
                        android:id="@+id/breakfast"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/breakfast"
                        android:textSize="14sp"
                        android:textColor="#444444"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/breakfastconteudo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/breakfast_cont"
                        android:textSize="14sp"
                        android:textColor="#444444"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:id="@+id/mid_morning_snack"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mid_morning_snack"
                        android:textSize="14sp"
                        android:textColor="#444444"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/mid_morning_snackconteudo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mid_morning_snack_cont"
                        android:textSize="14sp"
                        android:textColor="#444444"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                    android:id="@+id/lunch_and_dinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lunch_and_dinner"
                    android:textSize="14sp"
                    android:textColor="#444444"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/lunch_and_dinnerconteudo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lunch_and_dinnercont"
                        android:textSize="14sp"
                        android:textColor="#444444"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:id="@+id/afternoon_snack"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/afternoon_snack"
                        android:textSize="14sp"
                        android:textColor="#444444"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/afternoon_snackconteudo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/afternoon_snackcont"
                        android:textSize="14sp"
                        android:textColor="#444444"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:id="@+id/beforesleeping"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/beforesleeping"
                        android:textSize="14sp"
                        android:textColor="#444444"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:id="@+id/beforesleepingcont"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/beforesleepingcont"
                        android:textSize="14sp"
                        android:textColor="#444444"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="10dp"/>

                    <!-- Imagem centralizada -->
                    <ImageView
                        android:id="@+id/feeding_child_image"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:src="@drawable/bebe_andando"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"/>

                    <!-- Pink card -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="12dp"
                        android:background="#FFC0CB"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:text="@string/blue_card_title"
                            android:textColor="#000000"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_gravity="center_horizontal"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/almoçoejanta12"
                            android:textColor="#333333"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:text="Consistência"
                            android:textColor="#000000"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_gravity="center_horizontal"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ofereça os alimenteos em pedaços maiores na mesma consistência da comida da família."
                            android:textColor="#333333"
                            android:textSize="14sp" />

                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="12dp"
                    android:background="#FFEA70"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/goldentext"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>

                    <ImageView
                        android:id="@+id/fooding_child_image"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:src="@drawable/bebe_com_fruta_inteira"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="12dp"
                        android:background="#E0FFFF"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ciantext12"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            android:layout_gravity="center_horizontal" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
